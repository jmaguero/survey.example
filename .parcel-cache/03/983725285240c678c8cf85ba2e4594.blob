body::before {
  content: "";
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
  background: var(--color-lightblue);
  background-image: linear-gradient(
      115deg,
      rgba(138, 151, 184, 0.8),
      rgba(110, 120, 145, 0.7)
    ),
    url(https://cdn.pixabay.com/photo/2015/06/02/12/59/narrative-794978_1280.jpg);
  background-size: cover;
  background-repeat: no-repeat;
  background-position: center;
}
